package spinWords;

public class SpinWords {
	public static void main (String args[]) {
		System.out.println(spinWords("Welcome home"));
	}
	public static String spinWords(String sentence) {
		char[] b = new char[sentence.length()+500];
		int x = 0;
		while(x<sentence.length()) {
			char[] a = sentence.toCharArray();
			String sub = "";
			if(sentence.indexOf(" ")!=-1) sub = sentence.substring(0, sentence.indexOf(" "));
			else sub = sentence;
			sentence = sentence.substring(sub.length());
			System.out.println(sub);
			if(sub.length()<5) {
				for(int j = 0; j<sub.length(); j++) {
					b[x] = a[j];
					x++;
				}
			}else {
				for(int j = sub.length()-1; j>=0; j--) {
					b[x] = a[j];
					x++;
				}
			}
			System.out.println(sentence);
		}
		return new String(b);
	}
}

package spinWords;

public class SpinWords {
	public static void main (String args[]) {
		System.out.println(spinWords("Welcome home"));
	}
	public static String spinWords(String sentence) {
		char[] b = new char[sentence.length()+500];
		int x = 0;
		String aux = sentence;
		while(x < aux.length()) {
			char[] a = aux.toCharArray();
			String sub = aux.substring(0, aux.indexOf(" "));
			if(sub.length()<5) {
				for(int j = 0; j<sub.length(); j++) {
					b[x] = a[j];
					x++;
				}
			}else {
				for(int j = sub.length()-1; j>=0; j--) {
					b[x] = a[j];
					x++;
				}
			}
			aux = aux.substring(sub.length());
		}
		String res = new String(b);
		return res;
	}
}
